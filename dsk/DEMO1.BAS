1 REM OLD CALLING FORMAT
10 REM HARDWARE AND SOFTWARE SPRITES
20 COLOR 15,1,1:SCREEN 2,2
30 CLEAR 300,&HC000:DEFINT A-Z
100 MB=0:_MEMCPY(&H4010,VARPTR(MB),2):SB=&H2000
110 DIM TR(6):DIM BR(8):DIM WR (5)
120 I=0:J=0:X1=112:Y1=114:X2=25:Y2=17:V1=1:V2=1:V3=1:V4=1:XL=0:XR=0:YU=0:YD=0:CX=0:CY=0:T=0:SU=0:C=0
130 DIM SA(3,31):DIM SG(2,31)
200 BLOAD "MSXLOGOV.BIN",&HC000
210 _MEMVRM(&HC000,BASE(14),32*32,0)
230 FOR I=0 TO 7:READ T: POKE &HC000+I,T:NEXT
240 TR(0)=&HC000:TR(1)=1:TR(2)=1:TR(3)=SB:TR(4)=256:TR(5)=32:TR(6)=24:_TILERAM(VARPTR(TR(0)))
250 TR(3)=MB:_TILERAM(VARPTR(TR(0)))
260 _MEMVRM(MB,BASE(12),6144,0)
265 BLOAD"MSXLOGOH.BIN",&HC008
270 BR(3)=256:BR(4)=&HC408:BR(5)=&HC008:BR(6)=128:BR(7)=16:BR(8)=8
280 WR(3)=256:WR(5)=256
300 FOR I=0 TO 7:FOR J=0 TO 3
310 SG(0,I*4+J)=I*4+J:SG(1,I*4+J)=I*16:SG(2,I*4+J)=J*16
320 NEXT J:NEXT I
330 _SPRENABLE (VARPTR(SA(0,0)),VARPTR(SU),1)
340 ON STOP GOSUB 2000:STOP ON:ON ERROR GOTO 2000
350 FOR I=0 TO 31:_SPRSET (I,0,208,I,1):NEXT
360 _FILVRM(BASE(11),6144,&H4E,0)
370 _MEMVRM(MB,BASE(12),6144,0)
380 _SNDPLYON

1000 BR(0)=X1 MOD 8:BR(1)=Y1 MOD 8
1010 CX=X1\8:CY=Y1\8:BR(2)=MB+CY*256+CX*8
1020 _BLIT(VARPTR(BR(0)))
1030 X1=X1+V1:IF X1<1 OR X1>=128 THEN V1=-V1
1040 Y1=Y1+V2:IF Y1<1 OR Y1>=128 THEN V2=-V2
1050 XL=CX-1:IF XL<0 THEN XL=0
1060 YU=CY-1:IF YU<0 THEN YU=0
1070 XR=CX+18:IF XR>32 THEN XR=32
1080 YD=CY+10:IF YD>24 THEN YD=24
1090 T=YU*256+XL*8
1100 WR(0)=MB+T:WR(4)=BASE(12)+T:WR(1)=(XR-XL)*8:WR(2)=YD-YU
1110 _BOXMEMVRM(VARPTR(WR(0)))
1120 WR(0)=T+SB:WR(4)=T+MB
1130 _BOXMEMCPY(VARPTR(WR(0)))

1200 IF SU=1 GOTO 1200
1210 _SPRGRPMOV (X2,Y2,VARPTR(SG(0,0)),32):SU=1
1220 X2=X2+V3:IF X2<-4 OR X2>196 THEN V3=-V3
1230 Y2=Y2+V4:IF Y2<0 OR Y2>64 THEN V4=-V4
1240 C=C+1:IF C<10 GOTO 1200 ELSE C=0:GOTO 1000

2000 _SPRDISABLE:_SNDPLYOFF:END

